/*7. Gerar e imprimir uma matriz de tamanho 10 x 10, onde seus elementos s√£o da forma: 
A[i][j] = 2i + 7j - 2 se i < j;
A[i][j] = 3i 2 - 1 se i = j;
A[i][j] = 4i 3 - 5j 2 + 1 se i > j*/

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define tam 10

int main(){
	
	srand(time(NULL));
	
	int m[tam][tam], i, j;
	
	for (i=0; i < tam; i++){
		for (j=0; j<tam; j++){
			if (i < j)
				m[i][j] = (2*i) + (7*j) -2;
			else if (i == j)
				m[i][j] = (3*i*2) - 1;
			else 
				m[i][j] = (4*i*3) - (5*j*2) + 1;
		}
	}
	
	for (i=0; i < tam; i++){
		for (j=0; j<tam; j++){
			printf("%d\t", m[i][j]);
		}
		printf("\n");
	}
	
	return 0;
}
