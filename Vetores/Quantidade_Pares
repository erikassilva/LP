//5. Leia um vetor de 10 posições. Contar e escrever quantos valores pares ele possui

#include <stdio.h>
#define tam 10

int main(){
	
	int v[tam], par[tam], i, count=0;
	
	for (i=0; i<tam; i++){
		scanf("%d", &v[i]);
		if (v[i] % 2 ==0){
			par[i] = v[i];
			count ++;	
		}
	}
	printf("Quantidade de pares= %d\n", count);	
	
	return 0;
}